{
    "name": "zvax/storage",
    "description": "Naive interfaces and facilities to load stuff from the file system.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Zvax\\Storage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zvax\\Storage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit -d memory_limit=-1"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9"
    }
}
